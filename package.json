{
    "name": "community",
    "description": "Social platform web application.",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "main": "server/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/lxanders/community.git"
    },
    "dependencies": {
        "bluebird": "2.3.4",
        "body-parser": "1.9.0",
        "express": "4.9.5",
        "morgan": "1.3.2",
        "underscore": "1.7.0",
        "winston": "0.8.1"
    },
    "devDependencies": {
        "bootstrap": "3.2.0",
        "chai": "1.9.2",
        "chai-as-promised": "4.1.1",
        "eslint": "0.8.2",
        "eslint-plugin-mocha": "0.2.0",
        "istanbul": "0.3.2",
        "less": "1.7.5",
        "mocha": "1.21.4",
        "node-dev": "2.6.1",
        "proxyquire": "1.0.1",
        "sinon": "1.10.3",
        "sinon-chai": "2.5.0",
        "supertest": "0.14.0",
        "supertest-as-promised": "1.0.0"
    },
    "scripts": {
        "build": "npm run prepare-directories && npm run copy-html && npm run compile-css",
        "clean": "npm run clean-coverage && npm run clean-node && npm run clean-client",
        "clean-client": "rm -rf client/build",
        "clean-coverage": "rm -rf coverage",
        "clean-node": "rm -rf node_modules",
        "copy-html": "cp -r client/templates/* client/build/",
        "compile-css": "lessc client/styles/styles.less > client/build/css/styles.css",
        "coverage": "npm run test-unit --coverage && istanbul report html",
        "eslint": "eslint server",
        "prepare-directories": "npm run clean-client && mkdir client/build && mkdir client/build/css",
        "start": "node-dev server",
        "test": "npm run eslint && npm run test-unit && npm run test-functional",
        "test-functional": "NODE_ENV=test mocha server/test/functional --recursive",
        "test-unit": "NODE_ENV=test istanbul test _mocha -- -R spec --recursive server/test/unit/"
    },
    "engines": {
        "node": "0.10.32"
    }
}
